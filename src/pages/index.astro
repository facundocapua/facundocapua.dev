---
import Layout from '../layouts/Layout.astro';
---

<Layout>
	<main class="min-h-screen bg-slate-900 flex items-center justify-center px-6 py-12">
		<div class="max-w-2xl w-full">
			<div class="text-center">
				<!-- Profile Image -->
				<div class="w-24 h-24 mx-auto mb-8">
					<img src="/avatar.webp" alt="Facundo Capua" class="w-full h-full object-cover rounded-full" />
				</div>
				
				<!-- Main Content -->
				<h1 class="text-5xl md:text-6xl font-light text-slate-100 mb-3 tracking-tight">
					Facundo Capua
				</h1>
				
				<h2 class="text-xl text-slate-300 mb-8 font-light">
					Desarrollador Full Stack
				</h2>
				
				<p class="text-slate-400 mb-12 max-w-lg mx-auto leading-relaxed">
					Especializado en e-Commerce con Adobe Commerce y arquitectura en AWS. 
					Certificado como Solutions Architect, combinando experiencia técnica con visión de negocio para crear soluciones digitales escalables y de alto rendimiento.
				</p>
				
				<!-- Social Links -->
				<div class="flex justify-center gap-6 mb-12">
					<a 
						href="https://linkedin.com/in/facundocapua" 
						target="_blank" 
						rel="noopener noreferrer"
						class="group flex items-center justify-center w-10 h-10 bg-slate-800 hover:bg-slate-700 rounded-full transition-all duration-200 hover:scale-110"
						aria-label="LinkedIn"
					>
						<svg class="w-5 h-5 text-slate-400 group-hover:text-blue-300 transition-colors" fill="currentColor" viewBox="0 0 24 24">
							<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
						</svg>
					</a>
					
					<a 
						href="https://github.com/facundocapua" 
						target="_blank" 
						rel="noopener noreferrer"
						class="group flex items-center justify-center w-10 h-10 bg-slate-800 hover:bg-slate-700 rounded-full transition-all duration-200 hover:scale-110"
						aria-label="GitHub"
					>
						<svg class="w-5 h-5 text-slate-400 group-hover:text-purple-300 transition-colors" fill="currentColor" viewBox="0 0 24 24">
							<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
						</svg>
					</a>
					
					<a 
						href="https://x.com/facundocapua" 
						target="_blank" 
						rel="noopener noreferrer"
						class="group flex items-center justify-center w-10 h-10 bg-slate-800 hover:bg-slate-700 rounded-full transition-all duration-200 hover:scale-110"
						aria-label="X (Twitter)"
					>
						<svg class="w-5 h-5 text-slate-400 group-hover:text-cyan-300 transition-colors" fill="currentColor" viewBox="0 0 24 24">
							<path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
						</svg>
					</a>
					
					<button 
						id="copy-email-btn" 
						class="group flex items-center justify-center cursor-pointer w-10 h-10 bg-slate-800 hover:bg-slate-700 rounded-full transition-all duration-200 hover:scale-110 relative"
						aria-label="Copiar Email"
					>
						<svg class="w-5 h-5 text-slate-400 group-hover:text-green-300 transition-colors" fill="currentColor" viewBox="0 0 24 24">
							<path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
						</svg>
						<span id="email-tooltip" class="absolute -bottom-10 left-1/2 transform -translate-x-1/2 bg-slate-700 text-slate-100 px-2 py-1 rounded text-xs whitespace-nowrap opacity-0 transition-opacity">
							¡Email copiado!
						</span>
					</button>
				</div>
				

			</div>
		</div>
	</main>
</Layout>

<script>
	document.addEventListener('DOMContentLoaded', function() {
		const copyEmailBtn = document.getElementById('copy-email-btn');
		const emailTooltip = document.getElementById('email-tooltip');
		
		if (copyEmailBtn && emailTooltip) {
			copyEmailBtn.addEventListener('click', function() {
				// El email que queremos copiar
				const email = 'facundocapua@gmail.com';
				
				// Copiar al portapapeles usando la API Clipboard
				navigator.clipboard.writeText(email)
					.then(() => {
						// Mostrar el tooltip
						emailTooltip.style.opacity = '1';
						
						// Ocultar el tooltip después de 2 segundos
						setTimeout(() => {
							emailTooltip.style.opacity = '0';
						}, 2000);
					})
					.catch(err => {
						console.error('Error al copiar el email: ', err);
					});
			});
		}
	});
</script>
